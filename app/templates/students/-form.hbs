<form class="form pure-form pure-form-stacked">
  <fieldset>
      <label>First Name:</label>
      {{ input value=model.firstName }}

      <label>Last Name:</label>
      {{ input value=model.lastName }}

      <label>Gender:</label>
      {{ input value=model.gender }}

      <label>Grade:</label>
      {{ input value=model.grade }}

    <button class="button-save pure-button" {{ action "save" }}>Save</button>
    <button class="button-cancel pure-button" {{ action "cancel" }}>Cancel</button>
  </fieldset>
</form>
