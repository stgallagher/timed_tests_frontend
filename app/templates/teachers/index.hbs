<div class="pure-g">
  <div class="pure-u-1-4"></div>
  <div class="content pure-u-3-4">
    <div class="link-tos">
      {{link-to 'Create a new teacher' 'teachers.new'}}
    </div>
    <table class="pure-table pure-table-striped">
      <thead>
        <th>Name</th>
        <th>Gender</th>
        <th>Grade</th>
        <th></th>
      </thead>
      <tbody>
        {{#each teacher in model}}
          <tr>
            <td class="resource-names">{{link-to teacher.fullName 'teachers.show' teacher}}</td>
            <td class="resource-names">{{teacher.gender}}</td>
            <td class="resource-names">{{teacher.grade}}</td>
            <td><a href="#" {{action "delete" teacher}}>Delete</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
