<div class="pure-g">
  <div class="pure-u-1-4"></div>
  <div class="content pure-u-3-4">
    <div class="link-tos">
      {{link-to 'Create a new problem' 'problems.new'}}
    </div>
    <table class="pure-table pure-table-striped">
      <thead>
        <th>Top Factor</th>
        <th>Bottom Factor</th>
        <th>Operator</th>
        <th>Answer</th>
        <th></th>
      </thead>
      <tbody>
        {{#each problem in model}}
          <tr>
            <td class="resource-names">{{link-to problem.topFactor 'problems.show' problem}}</td>
            <td class="resource-names">{{problem.bottomFactor}}</td>
            <td class="resource-names">{{problem.operator}}</td>
            <td class="resource-names">{{problem.answer}}</td>
            <td><a href="#" {{action "delete" problem}}>Delete</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
